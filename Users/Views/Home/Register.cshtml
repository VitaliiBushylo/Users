@model Users.Models.User
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(u => u.LoginName)
        @Html.ValidationMessageFor(u => u.LoginName)
        @Html.TextBoxFor(u => u.LoginName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(u => u.UserName)
        @Html.ValidationMessageFor(u => u.UserName)
        @Html.TextBoxFor(u => u.UserName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(u => u.Country)
        @Html.ValidationMessageFor(u => u.Country)
        @Html.TextBoxFor(u => u.Country, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(u => u.BirthDate)
        @Html.ValidationMessageFor(u => u.BirthDate)
        @Html.TextBoxFor(u => u.BirthDate, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(u => u.Email)
        @Html.ValidationMessageFor(u => u.Email)
        @Html.TextBoxFor(u => u.Email, new { @class = "form-control" })
    </div>

    <input type="submit" value="Register" class="btn btn-info" />
}
